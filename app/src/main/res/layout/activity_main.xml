<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.caijia.widget.tablayout.RecyclerTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:rTabDividerColor="#e3e3e3"
        app:rTabDividerPadding="14dp"
        app:rTabDividerHeight="15dp"
        app:rTabDividerWidth="1px"
        app:rTabHasDivider="true"
        app:rTabPaddingSpace="20dp"
        app:rTabScrollMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout" />

</RelativeLayout>
